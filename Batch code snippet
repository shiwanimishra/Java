package university.problem;

/**
 *
 * @author student
 */
import java.util.Scanner;
public class Batch {
    Scanner sc = new Scanner(System.in);
    String bname=null;
    int numStudent=0;
    student[] stuArr;
    public Batch(String nm, int n){
    
        this.bname=nm;
        this.numStudent=n;
        stuArr = new student[n];
    }
    void fillBatch()
    {
        for(int i=0;i<numStudent;i++){
            System.out.println("ENTER THE NAME AND AGE OF THE STUDENT:");
            String name=sc.next();
            int age=sc.nextInt();
            student s=new student(name,age);
            stuArr[i]=s;
           
        }
        
        
}
   void Display(){
       for(student s:stuArr){
           System.out.println("Batch Name: "+this.bname);
           s.Display();
           
           
   }
   }
    
}
